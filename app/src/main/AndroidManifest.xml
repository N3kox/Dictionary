<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dictionary">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MyVocabularyList"
            android:configChanges="orientation|keyboard|layoutDirection|screenSize"
            android:screenOrientation="sensor"></activity>
        <activity android:name=".VerticalWordDetails"
            android:configChanges="orientation|keyboard|layoutDirection|screenSize"
            android:screenOrientation="sensor"/>

        <provider
            android:name=".ContentProvider"
            android:authorities="example.dictionary.provider" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|layoutDirection|screenSize"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>